{
  "name": "playwright-report-summary",
  "description": "A GitHub action to report Playwright test results as pull-request comments",
  "version": "3.3.0",
  "author": "Philipp Daun <daun@daun.ltd>",
  "homepage": "https://github.com/daun/playwright-report-summary",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daun/playwright-report-summary.git"
  },
  "bugs": {
    "url": "https://github.com/daun/playwright-report-summary/issues"
  },
  "keywords": [
    "actions",
    "node",
    "testing",
    "reporting",
    "test report",
    "playwright",
    "pull request"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "format:write": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "test:update": "jest -u",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@octokit/openapi-types": "^24.0.0",
    "@playwright/test": "^1.50.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.13.15",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^9.25.1",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
